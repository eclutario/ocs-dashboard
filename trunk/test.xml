<?xml version="1.0" encoding="UTF-8"?>
<Module>
    <ModulePrefs title="Agreement Report"
                 description="Agreement Report"
                 author="Victor Alarcon" author_email="v.alarcon@irri.org"
                 author_link="www.irri.org"
                 title_url="www.irri.org"
                 >
        <Require feature="dynamic-height"/>
     <Require feature="settitle" />
	 <Require feature="setprefs" />
	</ModulePrefs>
	<UserPref name="title" display_name="Title" required="false" />
	<UserPref name="_table_query_url" display_name="Data source url" required="true" />
	<Content type="html"><![CDATA[
		<style>
			chart_container {
				position: relative;
			}
			table_div {
				z-index: 1;
			}
			hack_chart_div {
				position: absolute;
				top: 0px;
				z-index: 0;
			}
		</style> 
        <script type="text/javascript" src="https://www.google.com/jsapi"></script>
        <script type="text/javascript">
			var prefs = new _IG_Prefs();
			// The gviz helper for gadget specific functionality.
			var gadgetHelper = null;
			_IG_RegisterOnloadHandler(loadVisualizationAPI);

			function loadVisualizationAPI() {
			  google.load('visualization', '1', {'packages': ['corechart']});
			  google.setOnLoadCallback(querySpreadsheet);
			};
			//gadgets.util.registerOnLoadHandler(querySpreadsheet);

            function querySpreadsheet() {
				var title = prefs.getString('title');
				if (title != '') {
				_IG_SetTitle(title);
				}
				gadgetHelper = new google.visualization.GadgetHelper();
				var query = gadgetHelper.createQueryFromPrefs(prefs);
				//var query = new google.visualization.Query('http://spreadsheets.google.com/tq?key=19Ca0JtfhaRc30wbgMHaFRWB2q73GOmjgbBfzE8jzlrw&gid=1013257615&pub=1');
                query.setQuery("select A,B,C,D,E");
				// Send the query with a callback function.				
                query.send(handleQueryResponse);
            }
    
            function handleQueryResponse(response) {
                if (response.isError()) {
                    alert('Error in query: ' + response.getMessage() + ' ' + response.getDetailedMessage());
                    return;
                }
                var data = response.getDataTable();
				
				var bubbleChart = new google.visualization.ChartWrapper({
							chartType: 'BubbleChart',
							containerId: 'visualization',
							dataTable: data,
							options: {
								title: 'Project Execution Time vs. Spend',
								hAxis: {title: '% Spent'},
								vAxis: {title: '% Time'},
								height: 600,
								width: 1200,
								backgroundColor: 'transparent',
								bubble: {textStyle: {color: 'transparent'},stroke: "transparent", opacity: 0.4},
							}
					});
				bubbleChart.draw();
				var hackChart = new google.visualization.ChartWrapper({
					chartType: 'LineChart',
					containerId: 'hack_chart_div',
					dataTable: [['x', 'y'],[0, 0], [1, 1]],
					options: {
						height: 600,
						width: 1200,
						hAxis: {
							textPosition: 'none',
							gridlines: {
								count: 0
							},
							baselineColor: 'none'
						},
						vAxis: {
							textPosition: 'none',
							gridlines: {
								count: 0
							},
							baselineColor: 'none'
						},
						colors: ['blue'],
						pointSize: 0,
						lineWidth: 1,
						enableInteractivity: false,
						legend: {
							position: 'none'
						}
					}
				});
				hackChart.draw();
            }      
        </script>
        <body style="font-family: Arial;border: 0 none;">
			<div id="chart_container">
				<div id="visualization"></div>
				<div id="hack_chart_div"></div>
			</div>
        </body>
  ]]>
    </Content>
</Module>
